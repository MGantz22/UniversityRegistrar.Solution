@{
  Layout = "_Layout";
}

@model Registrar.Models.Student

<h2>Add a Enrollment</h2>

<h4>Add a Emrollemnt to this student: @Html.DisplayFor(model => model.Description)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StudentId)

    @Html.Label("Select enrollment")
    @Html.DropDownList("EnrollmentId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>