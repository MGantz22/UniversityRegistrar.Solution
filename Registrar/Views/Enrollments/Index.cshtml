@{
  Layout = "_Layout";
}

@using Registrar.Models;

<h1>Enrollments</h1>

@if (@Model.Count == 0)
{
  <h3>No Enrollments have been added yet!</h3>
} 

@foreach (Enrollment enrollment in Model)
{
  <li>@Html.ActionLink($"{enrollment.Title}", "Details", new { id = enrollment.EnrollmentId })</li>
}

<p>@Html.ActionLink("Add new Enrollment", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>